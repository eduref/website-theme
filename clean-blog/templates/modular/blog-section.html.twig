<section class="blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <h3 class="h-center">{{ page.title }}</h3>
                {{ content }}
                {% for post in page.find('/blog').children.order('date', 'desc').slice(0, 5) %}
                    <h3>{{ post.title }}</h3>
                {% endfor %}
            </div>
        </div>
    </div>
</section>